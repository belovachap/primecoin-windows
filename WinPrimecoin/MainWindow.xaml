<Window x:Class="WinPrimecoin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinPrimecoin"
        mc:Ignorable="d"
        Title="WinPrimecoin" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Left" VerticalAlignment="Top" Height="399" Width="772" Margin="10,10,0,0">
            <TabItem x:Name="ConnectionsTabItem" Header="Connections">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="183*"/>
                        <ColumnDefinition Width="583*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="ConnectionListBox" HorizontalAlignment="Left" Height="351" VerticalAlignment="Top" Width="376" Margin="10,10,0,0" Grid.ColumnSpan="2"/>
                    <Label Content="From Address:" HorizontalAlignment="Left" Height="28" Margin="208,10,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="1"/>
                    <Label Content="To Address:" HorizontalAlignment="Left" Height="28" Margin="208,43,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="1"/>
                    <Label Content="Port:" HorizontalAlignment="Left" Height="28" Margin="208,76,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="1"/>
                    <Label Content="Services:" HorizontalAlignment="Left" Height="28" Margin="208,109,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="1"/>
                    <Label Content="Protocol Version:" HorizontalAlignment="Left" Height="28" Margin="208,142,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="1"/>
                    <Label Content="Starting Height:" HorizontalAlignment="Left" Height="28" Margin="208,175,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="1"/>
                    <TextBlock x:Name="ConnectionFromTextBlock" HorizontalAlignment="Left" Height="28" Margin="319,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="1"/>
                    <TextBlock x:Name="ConnectionToTextBlock" HorizontalAlignment="Left" Height="28" Margin="319,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="1"/>
                    <TextBlock x:Name="ConnectionPortTextBlock" HorizontalAlignment="Left" Height="28" Margin="319,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Grid.Column="1"/>
                    <TextBlock x:Name="ConnectionServicesTextBlock" HorizontalAlignment="Left" Height="28" Margin="319,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Grid.Column="1"/>
                    <TextBlock x:Name="ConnectionProtocolVersionTextBlock" HorizontalAlignment="Left" Height="28" Margin="319,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Grid.Column="1"/>
                    <TextBlock x:Name="ConnectionStartingHeightTextBlock" HorizontalAlignment="Left" Height="28" Margin="319,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Grid.Column="1"/>
                    <Label Content="Messages Out:" HorizontalAlignment="Left" Height="28" Margin="208,213,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="1"/>
                    <Label Content="Messages In:" HorizontalAlignment="Left" Height="28" Margin="208,290,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="1"/>
                    <ListBox x:Name="ConnectionMessagesOutListBox" HorizontalAlignment="Left" Height="72" Margin="319,213,0,0" VerticalAlignment="Top" Width="254" Grid.Column="1"/>
                    <ListBox x:Name="ConnectionMessagesInListBox" HorizontalAlignment="Left" Height="71" Margin="319,290,0,0" VerticalAlignment="Top" Width="254" Grid.Column="1"/>
                    <Label Content="Alive:" HorizontalAlignment="Left" Height="28" Margin="420,76,0,0" VerticalAlignment="Top" Width="52" HorizontalContentAlignment="Right" Grid.Column="1"/>
                    <TextBlock x:Name="ConnectionAliveTextBlock" HorizontalAlignment="Left" Height="28" Margin="477,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Grid.Column="1"/>
                    <TextBlock x:Name="ConnectionMessagesOutCountTextBlock" HorizontalAlignment="Left" Height="28" Margin="218,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" TextAlignment="Right" Grid.Column="1"/>
                    <TextBlock x:Name="ConnectionMessagesInCountTextBlock" HorizontalAlignment="Left" Height="28" Margin="218,318,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" TextAlignment="Right" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="BlockchainsTabItem" Header="Blockchains">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="157*"/>
                        <ColumnDefinition Width="591*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="BlockchainListBox" HorizontalAlignment="Left" Height="351" VerticalAlignment="Top" Width="376" Margin="10,10,0,0" Grid.ColumnSpan="3"/>
                    <Label Content="Received:" HorizontalAlignment="Left" Height="28" Margin="216,10,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="2"/>
                    <TextBlock x:Name="BestBlockReceivedTextBlock" HorizontalAlignment="Left" Height="28" Margin="327,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="2"/>
                    <Label Content="Version:" HorizontalAlignment="Left" Height="28" Margin="216,38,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="2"/>
                    <TextBlock x:Name="BestBlockVersionTextBlock" HorizontalAlignment="Left" Height="28" Margin="327,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="2"/>
                    <Label Content="TimeStamp:" HorizontalAlignment="Left" Height="28" Margin="216,66,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="2"/>
                    <TextBlock x:Name="BestBlockTimeStampTextBlock" HorizontalAlignment="Left" Height="28" Margin="327,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="2"/>
                    <Label Content="Bits:" HorizontalAlignment="Left" Height="28" Margin="216,94,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="2"/>
                    <TextBlock x:Name="BestBlockBitsTextBlock" HorizontalAlignment="Left" Height="28" Margin="327,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="2"/>
                    <Label Content="Nonce:" HorizontalAlignment="Left" Height="28" Margin="216,122,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="2"/>
                    <TextBlock x:Name="BestBlockNonceTextBlock" HorizontalAlignment="Left" Height="28" Margin="327,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="2"/>
                    <Label Content="PCM:" HorizontalAlignment="Left" Height="28" Margin="216,150,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="2"/>
                    <TextBlock x:Name="BestBlockPCMTextBlock" HorizontalAlignment="Left" Height="28" Margin="327,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="2"/>
                    <Label Content="Transactions:" HorizontalAlignment="Left" Height="28" Margin="216,178,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="2"/>
                    <TextBlock x:Name="BestBlockTransactionsTextBlock" HorizontalAlignment="Left" Height="28" Margin="327,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="2"/>
                    <Label Content="MerkleRoot:" HorizontalAlignment="Left" Height="28" Margin="216,206,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="2"/>
                    <TextBlock x:Name="BestBlockMerkleRootTextBlock" HorizontalAlignment="Left" Height="28" Margin="327,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="2"/>
                    <Label Content="HeaderHash:" HorizontalAlignment="Left" Height="28" Margin="216,234,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Right" Grid.Column="2"/>
                    <TextBlock x:Name="BestBlockHeaderHashTextBlock" HorizontalAlignment="Left" Height="28" Margin="327,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.Column="2"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="MinersTabItem" Header="Miners">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="MinerListBox" HorizontalAlignment="Left" Height="318" VerticalAlignment="Top" Width="376" Margin="10,43,0,0"/>
                    <Label Content="Mining Address:" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="96" HorizontalContentAlignment="Right"/>
                    <TextBox x:Name="MiningAddressTextBox" HorizontalAlignment="Left" Height="19" Margin="111,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="WalletsTabItem" Header="Wallets"/>
        </TabControl>

    </Grid>
</Window>
